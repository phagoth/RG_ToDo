project_div = $("#project_<%= @project.id %>")
new_task = $("<%= escape_javascript(render @task) %>").appendTo(project_div.find(".task_wrapper"));
new_task.hover(
    function () {
      $(this).find(".trash").removeClass("hide");
    },
    function () {
      $(this).find(".trash").addClass("hide");
    }
  );

new_task.find(".task_input_title").hide();
new_task.find(".edit-task").on('click', function(){
    $(this).parents('.row').find('.task_label_title').toggle();
    $(this).parents('.row').find('.task_input_title').toggle();
    
    return false;
  });

project_div.find(".task-form #task_name")[0].value = "";
